---
import { Image } from "astro:assets"
import siteInfo from "~/data/site-info";

import ScrollDown from "~/components/common/ScrollDown.astro";

import logo from "../../assets/350x100.svg"

const {background, subtitle, title, tagline, alt=siteInfo.name, scroll, image, ...scrollDown } = Astro.props

import darkHeroImage from "~/assets/dark-icon.png"
import heroImage from "~/assets/light-icon.png"
import type { ActionError } from "astro:actions";
---
<section class:list={["hero relative z-10 w-full flex lg:gap-8 lg:justify-center justify-start lg:items-center  px-4 sm:px-8 text-balance pb-4 sm:pb-8 pt-32", {"h-[85svh] max-h-full": scroll}, image ? "flex-col lg:flex-row" : "", background ==="gradient" ? "gradient" : background]}>
    <div class:list={["order-2 lg:order-1  z-10 w-full flex flex-col max-w-screen-md justify-start lg:justify-center p-4 lg:p-8 text-balance flex-auto text-[--onPrimary]", image ? "text-left" : "items-center text-center"]}>
        <!-- <Image src={logo} alt={alt} format="avif" /> -->
        <div
        aria-roledescription="subtitle"
        class="mb-6 font-subtitle text-4xl font-black uppercase "
        >
            {subtitle}
        </div>
        <h1
            class="my-2 font-title text-6xl font-semibold text-balance text-[--onPrimary] lg:text-8xl"
        >
            {title}
        </h1>
        <p class="font-base mb-4 text-xl dark:text-[--onPrimary] text-[--tertiaryContainer] ">
            {tagline}
        </p>
        <slot />
        { scroll &&
            <ScrollDown large {...scrollDown} />
        }
    </div>




    <div class="flex-initial  lg:w-1/3 flex items-end lg:items-center justify-start lg:justify-center order-1 max-h-fit lg:order-2 lg:max-h-64">
        <Image src={heroImage} alt="" class=" w-fit relative p-4 dark:hidden block h-64 lg:h-fit object-contain object-center" /> 
        <Image src={darkHeroImage} alt="" class="relative hidden dark:block w-fit p-4 h-64 lg:h-fit object-contain object-center" /> 
    </div>
    
</section>